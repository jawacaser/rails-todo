<p id="notice"><%= notice %></p>

<h1>The Champ's To-do List</h1>

<table class="table table-bordered" variant="dark">
  <thead>
    <tr>
      <th>Achievement</th>
      <th>Unlocked</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>

      <% if list.completed %>
      <tr class="table-secondary">
        <td><%= list.description %></td>
        <td>✓</td>
        <td><%= link_to 'Show', list %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% else %>
      <tr>
        <td><%= list.description %></td>
        <td>✗</td>
        <td><%= link_to 'Show', list %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Achievement', new_list_path, class: 'btn btn-outline-secondary' %>
